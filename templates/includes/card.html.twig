<section id="cards">
    <div class="container">
        <div class="container-fluid services py-0">
            <div class="container py-3">
                <div class="mx-auto text-center mb-5" style="max-width: 800px;"></div>
                <div class="text-uppercase text-center">
                    <h2 class="vert">NOS SOLUTIONS</h2>
                </div>
            </div>
            <div class="d-flex flex-wrap justify-content-center mt-5">
                {% for card in Main %}  
                  <div class="card mx-2 mb-3" style="width: 20rem;">
                     <img src="{{ asset('upload/' ~ card.image) }}" alt="{{ card.image }}" class="card-img-top" style="width: 100%; height: 200px;"> 
                      <div class="card-body d-flex flex-column">
                          <h2 class="card-title">{{ card.title }}</h2>
                          <p class="card-text flex-grow-1">{{ card.subtitle }}</p>
                          <a href="{{ path('app_show_solution', {'id': card.id}) }}" class="btn btn-savoir align-self-center">Plus d'info</a>
                      </div>
                  </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section> 
